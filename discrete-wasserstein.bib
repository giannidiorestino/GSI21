@InProceedings{	  amari:87dual,
  author =	 {Amari, Shu{n-i}chi},
  title =	 {Dual connections on the {H}ilbert bundles of
                  statistical models},
  booktitle =	 {Geometrization of statistical theory (Lancaster,
                  1987)},
  pages =	 {123--151},
  publisher =	 {ULDM Publ.},
  address =	 {Lancaster},
  year =	 1987,
  ams =		 {62F12, 58B99},
  mathrev =	 {A fibre bundle is constructed on a
                  finite-dimensional parametric statistical model with
                  a Hilbert space as the fibre space. The Hilbert
                  space represents the tangent directions of the set
                  of probability distributions in the function
                  space. A pair of dual linear connections is
                  introduced in the Hilbert bundle. This framework is
                  used to study the following problems. Let $x\sb i$
                  have the probability distribution $p(x, \theta,
                  \xi\sb i)$, $i=1,2, \cdots,$ where $\theta$ is the
                  parameter of main interest and $\xi\sb 1, \xi\sb 2,
                  \cdots $ are unknown nuisance parameters which
                  increase with $n$. The estimation of $\theta$
                  through an estimating equation $\sum y(x\sb i,
                  \theta)=0$ is considered using the criterion of
                  minimum asymptotic variance for any sequence of
                  nuisance parameters. The same problem is considered
                  under the assumption that $\xi\sb 1, \xi\sb 2,
                  \cdots $ are independent random variables having a
                  common distribution $Z(\xi)$ which is considered as
                  the nuisance parameter. Such a model is called a
                  semiparametric model}
}

